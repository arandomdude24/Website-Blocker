{
    "name": "Website Blocker",
    "version": "1.0",
    "description": "It blocks websites",

    "permissions": [
        "contextMenus",
        "storage",
        "declarativeContent",
        "<all_urls>",
        "tabs",
        "alarms"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "page_action": {
        "default_popup": "popup.html"
    },

    "options_page": "options.html",

    "manifest_version": 2
}